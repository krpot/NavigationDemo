<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mpark.navigationdemo">

    <application
        android:name="com.mpark.navigationdemo.NavigateDemoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NavigationDemo">
        <activity
            android:name="com.mpark.navigationdemo.ui.splash.SplashMainActivity"
            android:theme="@style/Theme.Splash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.mpark.navigationdemo.MainActivity"
            tools:ignore="DuplicateActivity" />
    </application>

</manifest>